{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Produtos (Node + Prisma + MySQL[MariaDB])",
        "version": "1.0.0",
        "description": "Documentação da API Pedidos"
    },
    "servers": [
        {
            "url": "http://localhost:3001",
            "description": "Servidor local"
        }
    ],
    "securityDefinitions": {
        "bearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header",
            "description": "Bearer token para autenticação",
            "scheme": "bearer",
            "bearer format": "JWT",
            "bearer token": "JWT <token>",
            "bearer token description": "Bearer token para autenticação"
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearer format": "JWT"
            }
        }
    },
    "tags": [
        {
            "name": "Teste",
            "description": "Endpoint de teste da API"
        },
        {
            "name": "User",
            "description": "Endpoints para cadastro de usuários"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Teste"
                ],
                "summary": "Endpoint de teste geral da API",
                "responses": {
                    "200": {
                        "description": "Retorna uma mensagem de teste"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            }
        },
        "/login": {
            "get": {
                "tags": [
                    "Rotas de Login"
                ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "summary": "Endpoint para validar o login",
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "401": {
                        "description": "Token inválido ou expirado"
                    }
                }
            },
            "post": {
                "tags": [
                    "Rotas de Login"
                ],
                "summary": "Endpoint para fazer o login",
                "requestBody": {
                    "description": "Dados de login",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "default": "user@example.com"
                                    },
                                    "senha": {
                                        "type": "string",
                                        "default": "string"
                                    },
                                    "validade": {
                                        "type": "integer",
                                        "default": 30
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login realizado com sucesso"
                    },
                    "400": {
                        "description": "Erro ao fazer login, verifique e-mail e senha"
                    }
                }
            }
        },
        "/user": {
            "get":{
                "tags": [
                    "User"
                ],
                "summary": "Endpoint para listar usuários",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de usuários retornada com sucesso"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            },
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Endpoint para cadastro de usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    },
                                    "senha": {
                                        "type": "string"
                                    },
                                    "nascimento":{
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "genero": {
                                        "type": "string",
                                        "enum": ["Masculino", "Feminino"]
                                    }
                                    
                                },
                                "required": ["name", "email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário cadastrado com sucesso"
                    },
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "500": {
                        "description": "Erro ao processar a requisição"
                    }
                }
            }
        }




        
    }
}